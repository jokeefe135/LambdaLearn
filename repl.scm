(define (repl)
  (display "LambdaLearn REPL")
  (newline)
  (let loop ()
    (display "> ")
    (flush-output)
    (let ((line (read-line)))
      (cond
       ((eof-object? line)
        (display "Goodbye!")
        (newline))
       ((string=? line "")
        (loop))
       (else
        (let* ((expr   (parse line))
               (result (g:eval expr)))
          (display "; Input: ")
          (pp-expr expr)
          (newline)
          (write result)
          (newline)
          (loop)))))))
